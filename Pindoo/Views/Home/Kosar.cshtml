@model CartViewModel

<div class="flex flex-wrap w-full max-w-[1280px] p-2 justify-around gap-8">

    <form method="post" action="fizetes">

        <div class="w-full card bg-base-300 p-8 flex flex-wrap flex-row gap-8 justify-around">
            <div class="w-full max-w-[575px]">
                <h2 class="card-title">Számlázási adatok</h2>
                <fieldset class="fieldset">
                    <legend class="fieldset-legend">E-mail cím *</legend>
                    <label class="input validator w-full">
                        <svg class="h-[1em] opacity-50" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><g stroke-linejoin="round" stroke-linecap="round" stroke-width="2.5" fill="none" stroke="currentColor"><rect width="20" height="16" x="2" y="4" rx="2"></rect><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path></g></svg>
                        <input type="email" placeholder="" name="email" />
                    </label>
                </fieldset>
                <div class="flex gap-1 w-full">
                    <fieldset class="fieldset w-1/2">
                        <legend class="fieldset-legend">Vezetéknév *</legend>
                        <label class="input validator w-full">
                            <input type="text" placeholder="" name="first-name" />
                        </label>
                    </fieldset>
                    <fieldset class="fieldset w-1/2">
                        <legend class="fieldset-legend">Keresztnév *</legend>
                        <label class="input validator w-full">
                            <input type="text" placeholder="" name="last-name" />
                        </label>
                    </fieldset>
                </div>
                <div class="flex gap-1 w-full">
                    <fieldset class="fieldset w-1/3">
                        <legend class="fieldset-legend">Irányítószám  *</legend>
                        <label class="input validator w-full">
                            <input type="text" placeholder="" name="zip" />
                        </label>
                    </fieldset>
                    <fieldset class="fieldset w-2/3">
                        <legend class="fieldset-legend w-full">Település *</legend>
                        <label class="input validator">
                            <input type="text" placeholder="" name="city" />
                        </label>
                    </fieldset>
                </div>
                <fieldset class="fieldset w-full">
                    <legend class="fieldset-legend">Utca, házszám *</legend>
                    <label class="input validator w-full">
                        <input type="text" placeholder="" name="address" />
                    </label>
                </fieldset>
                <fieldset class="fieldset w-full">
                    <legend class="fieldset-legend">Telefonszám *</legend>
                    <label class="input validator w-full">
                        <svg class="h-[1em] opacity-50" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16"><g fill="none"><path d="M7.25 11.5C6.83579 11.5 6.5 11.8358 6.5 12.25C6.5 12.6642 6.83579 13 7.25 13H8.75C9.16421 13 9.5 12.6642 9.5 12.25C9.5 11.8358 9.16421 11.5 8.75 11.5H7.25Z" fill="currentColor"></path><path fill-rule="evenodd" clip-rule="evenodd" d="M6 1C4.61929 1 3.5 2.11929 3.5 3.5V12.5C3.5 13.8807 4.61929 15 6 15H10C11.3807 15 12.5 13.8807 12.5 12.5V3.5C12.5 2.11929 11.3807 1 10 1H6ZM10 2.5H9.5V3C9.5 3.27614 9.27614 3.5 9 3.5H7C6.72386 3.5 6.5 3.27614 6.5 3V2.5H6C5.44771 2.5 5 2.94772 5 3.5V12.5C5 13.0523 5.44772 13.5 6 13.5H10C10.5523 13.5 11 13.0523 11 12.5V3.5C11 2.94772 10.5523 2.5 10 2.5Z" fill="currentColor"></path></g></svg>
                        <input type="text" placeholder="" name="phone" />
                    </label>
                </fieldset>
            </div>

            <div class="w-full max-w-[575px]">
                <h2 class="card-title">Termékek</h2>
                <div class="card bg-base-100 w-[675px] flex gap-1">
                    @foreach (var product in Model.Items)
                    {
                        <div class="card card-side">
                            <figure class="w-[180px]">
                                <img src="/images/@product.ImageFileName" width="180" height="150" />
                            </figure>
                            <div class="card-body">
                                <h2 class="card-title">@product.ProductName</h2>
                                <div class="card-actions justify-end">
                                    <h2 class="card-title">@product.Quantity * @product.Price</h2>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <div class="w-full">
                <h2 class="card-title">Szállítás</h2>
                <ul class="grid w-full gap-6 md:grid-cols-3">
                    <li>
                        <input type="radio" id="hosting-small" name="hosting" value="hosting-small" class="hidden peer" required />
                        <label for="hosting-small" class="inline-flex items-center justify-between w-full p-5 text-gray-500 bg-white border border-gray-200 rounded-lg cursor-pointer peer-checked:border-blue-600 peer-checked:text-blue-600 hover:text-gray-600 hover:bg-gray-100">
                            <div class="block">
                                <div class="w-full text-lg font-semibold">Magyar Posta</div>
                                <div class="w-full">1 990 Ft</div>
                            </div>
                        </label>
                    </li>
                    <li>
                        <input type="radio" id="hosting-big" name="hosting" value="hosting-big" class="hidden peer">
                        <label for="hosting-big" class="inline-flex items-center justify-between w-full p-5 text-gray-500 bg-white border border-gray-200 rounded-lg cursor-pointer peer-checked:border-blue-600 peer-checked:text-blue-600 hover:text-gray-600 hover:bg-gray-100">
                            <div class="block">
                                <div class="w-full text-lg font-semibold">Packeta</div>
                                <div class="w-full">1 590 Ft</div>
                            </div>
                        </label>
                    </li>
                    <li>
                        <input type="radio" id="hosting-bigx" name="hosting" value="hosting-bigx" class="hidden peer">
                        <label for="hosting-bigx" class="inline-flex items-center justify-between w-full p-5 text-gray-500 bg-white border border-gray-200 rounded-lg cursor-pointer peer-checked:border-blue-600 peer-checked:text-blue-600 hover:text-gray-600 hover:bg-gray-100">
                            <div class="block">
                                <div class="w-full text-lg font-semibold">Foxpost</div>
                                <div class="w-full">990 Ft</div>
                            </div>
                        </label>
                    </li>
                </ul>
            </div>

            <div class="w-full">
                <h2 class="card-title">Fizetési mód</h2>
                <input type="submit" class="btn btn-xl btn-success" value="Fizetés" />
            </div>
     
        </div>

    </form>
</div>